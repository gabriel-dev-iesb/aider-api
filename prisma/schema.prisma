generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Aider {
  id             String               @id @default(auto()) @map("_id") @db.ObjectId
  isActive       Boolean              @default(false)
  name           String
  email          String               @unique
  password       String
  address        Address?
  avatar_url     String?
  bio            String?
  interests      String[]
  // TODO: MUDAR PARA ORGANIZATION
  favorites      OrganizationAiders[]
  social_network Social?

  @@map("aider")
}

model Organization {
  id             String               @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  representative String
  logo           String
  email          String
  categories     String[]
  social_network Social?
  address        Address?
  // TODO: MUDAR PARA CAUSAS
  causes         String?
  aiders         OrganizationAiders[]

  @@map("organization")
}

