generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Donator {
  id             String                 @id @default(auto()) @map("_id") @db.ObjectId
  isActive       Boolean                @default(false)
  name           String
  email          String                 @unique
  password       String
  address        Address?
  avatar_url     String?
  bio            String?
  interests      String[]
  // TODO: MUDAR PARA ORGANIZATION
  favorites      OrganizationDonators[]
  social_network Social?

  @@map("donator")
}

model Organization {
  id             String                 @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  representative String
  email          String
  logo           String
  address        Address
  // TODO: MUDAR PARA CAUSAS
  causes         String?
  tags           String[]
  aiders         OrganizationDonators[]

  // Causes Causes[]
  // Donator Donator[]
  @@map("organization")
}

